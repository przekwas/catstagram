		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"moduleResolution": "node",
        "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react"
	},
	"include": ["src/client/**/*"],
	"exclude": ["node_modules"]
}
